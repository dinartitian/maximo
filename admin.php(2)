<?php
session_start();
require_once 'config.php';

// Basic authentication check
if (!isset($_SESSION['logged_in'])) {
    header('Location: login.php');
    exit();
}

// Handle logout
if (isset($_GET['logout'])) {
    session_destroy();
    header('Location: login.php');
    exit();
}

// Error and success message handling
$messages = [];

try {
    // Handle media editing
    if (isset($_POST['edit_media'])) {
        $media_id = $_POST['media_id'];
        $title = $_POST['title'];
        $schedule_start = $_POST['schedule_start'];
        $schedule_end = $_POST['schedule_end'];
        $is_active = isset($_POST['is_active']) ? 1 : 0;

        // Validate schedule dates
        $start = new DateTime($schedule_start);
        $end = new DateTime($schedule_end);

        if ($start > $end) {
            throw new Exception("Jadwal mulai harus lebih awal dari jadwal berakhir.");
        }

        // Update database
        $stmt = $pdo->prepare("
            UPDATE media 
            SET title = ?, 
                schedule_start = ?, 
                schedule_end = ?,
                is_active = ?
            WHERE id = ?
        ");

        $stmt->execute([
            $title,
            $start->format('Y-m-d H:i:s'),
            $end->format('Y-m-d H:i:s'),
            $is_active,
            $media_id
        ]);

        $_SESSION['success'] = "Media berhasil diperbarui!";
        $orientation = isset($_POST['orientation']) ? $_POST['orientation'] : 'landscape';
        header('Location: ' . $_SERVER['PHP_SELF'] . '?tab=' . $orientation);
        exit();
    }

    // Handle running text editing
    if (isset($_POST['edit_runtext'])) {
        $runtext_id = $_POST['runtext_id'];
        $content = $_POST['content'];
        $orientation = $_POST['orientation'];
        $schedule_start = $_POST['schedule_start'];
        $schedule_end = $_POST['schedule_end'];
        $is_active = isset($_POST['is_active']) ? 1 : 0;

        // Validate schedule dates if provided
        if (!empty($schedule_start) && !empty($schedule_end)) {
            $start = new DateTime($schedule_start);
            $end = new DateTime($schedule_end);

            if ($start > $end) {
                throw new Exception("Jadwal mulai harus lebih awal dari jadwal berakhir.");
            }
        }

        // Update database
        $stmt = $pdo->prepare("
            UPDATE running_text 
            SET content = ?, 
                orientation = ?, 
                schedule_start = ?, 
                schedule_end = ?,
                is_active = ?
            WHERE id = ?
        ");

        $stmt->execute([
            $content,
            $orientation,
            !empty($schedule_start) ? $start->format('Y-m-d H:i:s') : null,
            !empty($schedule_end) ? $end->format('Y-m-d H:i:s') : null,
            $is_active,
            $runtext_id
        ]);

        $_SESSION['success'] = "Running text berhasil diperbarui!";
        header('Location: ' . $_SERVER['PHP_SELF'] . '?tab=running-text');
        exit();
    }

    // Handle media deletion
    if (isset($_GET['delete_media']) && is_numeric($_GET['delete_media'])) {
        $stmt = $pdo->prepare("SELECT filename FROM media WHERE id = ?");
        $stmt->execute([$_GET['delete_media']]);
        $file = $stmt->fetch();

        if ($file) {
            $filepath = "assets/media/" . $file['filename'];
            if (file_exists($filepath)) {
                unlink($filepath);
            }

            $stmt = $pdo->prepare("DELETE FROM media WHERE id = ?");
            $stmt->execute([$_GET['delete_media']]);
            $_SESSION['success'] = "Media berhasil dihapus!";
        }

        $orientation = isset($_GET['orientation']) ? $_GET['orientation'] : 'landscape';
        header('Location: ' . $_SERVER['PHP_SELF'] . '?tab=' . $orientation);
        exit();
    }

    // Handle running text deletion
    if (isset($_GET['delete_runtext']) && is_numeric($_GET['delete_runtext'])) {
        $stmt = $pdo->prepare("DELETE FROM running_text WHERE id = ?");
        $stmt->execute([$_GET['delete_runtext']]);
        $_SESSION['success'] = "Running text berhasil dihapus!";

        header('Location: ' . $_SERVER['PHP_SELF'] . '?tab=running-text');
        exit();
    }

    // Handle file upload with schedule
    if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_FILES['media'])) {
        $target_dir = "assets/media/";

        if (!is_dir($target_dir)) {
            mkdir($target_dir, 0755, true);
        }

        $file_extension = strtolower(pathinfo($_FILES["media"]["name"], PATHINFO_EXTENSION));

        if ($_POST['orientation'] === 'portrait') {
            $allowed_extensions = ['jpg', 'jpeg', 'png', 'gif'];
            if (!in_array($file_extension, $allowed_extensions)) {
                throw new Exception("Untuk mode Portrait, hanya mendukung format gambar (JPG, JPEG, PNG, GIF).");
            }
        } else {
            $allowed_extensions = ['mp4', 'jpg', 'jpeg', 'png', 'gif'];
            if (!in_array($file_extension, $allowed_extensions)) {
                throw new Exception("Format file tidak didukung.");
            }
        }

        // Generate unique filename
        $new_filename = uniqid() . '_' . time() . '.' . $file_extension;
        $target_file = $target_dir . $new_filename;

        // Validate schedule dates
        $schedule_start = new DateTime($_POST['schedule_start']);
        $schedule_end = new DateTime($_POST['schedule_end']);

        if ($schedule_start > $schedule_end) {
            throw new Exception("Jadwal mulai harus lebih awal dari jadwal berakhir.");
        }

        // Upload file
        if (!move_uploaded_file($_FILES["media"]["tmp_name"], $target_file)) {
            throw new Exception("Gagal mengupload file.");
        }

        // Insert to database
        $stmt = $pdo->prepare("
            INSERT INTO media (
                filename, type, title, orientation, 
                schedule_start, schedule_end, is_active,
                upload_date
            ) VALUES (?, ?, ?, ?, ?, ?, 1, NOW())
        ");

        $stmt->execute([
            $new_filename,
            $file_extension,
            $_POST['title'],
            $_POST['orientation'],
            $schedule_start->format('Y-m-d H:i:s'),
            $schedule_end->format('Y-m-d H:i:s')
        ]);

        $_SESSION['success'] = "File berhasil diupload dengan jadwal!";
        header('Location: ' . $_SERVER['PHP_SELF'] . '?tab=' . $_POST['orientation']);
        exit();
    }

    // Fetch media for both orientations with status
    $stmt = $pdo->prepare("
        SELECT *, 
            CASE 
                WHEN NOW() BETWEEN schedule_start AND schedule_end AND is_active = 1 
                THEN 'Aktif'
                WHEN NOW() < schedule_start THEN 'Dijadwalkan'
                WHEN NOW() > schedule_end THEN 'Berakhir'
                ELSE 'Nonaktif'
            END as status_text
        FROM media 
        WHERE orientation = ? 
        ORDER BY upload_date DESC
    ");

    $stmt->execute(['landscape']);
    $landscape_media = $stmt->fetchAll(PDO::FETCH_ASSOC);

    $stmt->execute(['portrait']);
    $portrait_media = $stmt->fetchAll(PDO::FETCH_ASSOC);

    // Fetch running texts with status
    $stmt = $pdo->query("
        SELECT *, 
            CASE 
                WHEN NOW() BETWEEN schedule_start AND schedule_end AND is_active = 1 
                THEN 'Aktif'
                WHEN NOW() < schedule_start THEN 'Dijadwalkan'
                WHEN NOW() > schedule_end THEN 'Berakhir'
                ELSE 'Nonaktif'
            END as status_text
        FROM running_text 
        ORDER BY created_at DESC
    ");
    $running_texts = $stmt->fetchAll(PDO::FETCH_ASSOC);
} catch (Exception $e) {
    $_SESSION['error'] = "Error: " . $e->getMessage();
    error_log("Admin Panel Error: " . $e->getMessage());
}
