    <script>
// Fungsi untuk format tanggal agar bisa dibandingkan
function formatDate(date) {
    return date.getFullYear() + '-' + 
           String(date.getMonth() + 1).padStart(2, '0') + '-' + 
           String(date.getDate()).padStart(2, '0') + ' ' + 
           String(date.getHours()).padStart(2, '0') + ':' + 
           String(date.getMinutes()).padStart(2, '0') + ':' + 
           String(date.getSeconds()).padStart(2, '0');
}

// Fungsi untuk memperbarui status media secara otomatis
function updateMediaStatus() {
    const now = new Date();
    const currentTime = formatDate(now);  // Waktu sekarang dalam format yang sesuai
    
    // Loop semua baris yang memiliki data jadwal di landscape dan portrait
    document.querySelectorAll('tr[data-schedule-start][data-schedule-end]').forEach(row => {
        const startTime = row.dataset.scheduleStart;
        const endTime = row.dataset.scheduleEnd;
        const isActive = row.dataset.isActive === '1';
        const statusCell = row.querySelector('.status-cell');

        let newStatus = '';
        let statusClass = '';

        if (currentTime < startTime) {
            newStatus = 'Dijadwalkan';
            statusClass = 'status-dijadwalkan';
        } else if (currentTime > endTime) {
            newStatus = 'Berakhir';
            statusClass = 'status-berakhir';
        } else if (isActive) {
            newStatus = 'Aktif';
            statusClass = 'status-aktif';
        } else {
            newStatus = 'Nonaktif';
            statusClass = 'status-nonaktif';
        }

        // Update status jika sudah berubah
        if (!statusCell.classList.contains(statusClass)) {
            statusCell.classList.remove('status-dijadwalkan', 'status-aktif', 'status-nonaktif', 'status-berakhir');
            statusCell.classList.add(statusClass);
            statusCell.innerHTML = `<i class="fa fa-circle"></i> ${newStatus}`;
        }
    });
}

// Jalankan fungsi pertama kali
updateMediaStatus();

// Update status setiap 30 detik (bisa diubah jika perlu)
setInterval(updateMediaStatus, 30000);
</script>
</body>
</html>
